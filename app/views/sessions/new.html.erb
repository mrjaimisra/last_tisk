<div class="container">
  <div class="row">

    <h1>Sign in</h1>

    <div class="login-form">
      <%= form_for(:session, url: login_path) do |f| %>
        <%= f.label :username %>
        <%= f.text_field :username, placeholder: "Username" %>
        <br>
        <%= f.label :password %>
        <%= f.password_field :password, placeholder: "Password" %>
        <br>
        <%= f.submit "Login", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
