<h1>Add A New Task</h1>

<%= render partial: "layouts/errors", locals: { object: @task } %>

<%= form_for @task, url: user_list_tasks_path do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br/>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <br/>
  <%= f.label :due_date %>
  <%= f.date_field :due_date %>
  <br/>
  <%= f.submit "Submit", class: "btn btn-default" %>
<% end %>
